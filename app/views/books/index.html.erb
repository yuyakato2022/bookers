<!DOCTYPE html>
<html lang="ja">

  <body>
    <p id="notice"></p>
    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td> <%=link_to "show", book_path(book.id) %></td>
          <td> <%=link_to "edit",  edit_book_path(book.id) %></td>
          <td> <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are You Sureï¼Ÿ" %></td>
        </tr>
       </tbody>
      <% end %>
    </table>

      <h2>New book</h2>

      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @book, url:'/books' ,method: :post do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Body</h4>
        <%= f.text_area :body %><br>

        <%= f.submit 'Create Book' %>
      <% end %>

  </body>
</html>